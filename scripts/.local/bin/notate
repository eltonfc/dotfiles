#!/bin/bash

# Author: Conner McDaniel
# https://github.com/connermcd/bin
# MIT license

set -e
PAPERDIR=${HOME}/trab/refs/papers
NOTESDIR=${HOME}/trab/refs/notes

[ -z "$1" ] && echo "PDF filename missing." && exit 1
[ ! -f "$1" ] && echo "Argument ${1} is not a file." && exit 1

pdf="$1"
if [ -z "$2" ]
then
	bib=$(getbib "${pdf}" | bibclean) || exit 1
else
	bib=$(getbib "${2}" | bibclean) || exit 1
fi
index=$(sed -n '1s/.*{\([^,]*\),/\1/p' <<< $bib)
#index=$(sed -n '1s/.*{\([^,]*\),/\1/p' <<< $BIB)
# Trocado porque o Crossref comeÃ§ou a devolver bibtex sem quebra de linha:
# https://crossref.atlassian.net/browse/CR-1064
#index=$(sed -n '1s/[^{]*{\([^,]*\),/\1/p' <<< $bib)
#index=$(sed -n '1s/.*@.[^{]*{\([^,]*\).*/\1/p' <<< $bib)
doi=$(grep -o -E "doi = {[^}]*" <<< $bib | cut -d{ -f2)
file_name=

make_file() {
new_pdf=$(realpath $pdf)
[[ ! -f "$new_pdf" ]] && mv "$pdf" "$new_pdf"
bib=$(echo "$bib" | sed "1a\\  pdf = {$new_pdf},")
cat >"$file_name" <<EOF
~~~.bib
$bib
~~~

# Summary

# Quotes and Data

# Questions
EOF
}

check_file() {
    file="${NOTESDIR}/${1}.md"
    if [[ -f $file ]]; then
        file_doi=$(grep -o -E "doi = {[^}]*" $file | cut -d{ -f2)
        if [ "${file_doi,,}" = "${doi,,}" ]; then
            file_name="$file"
        else
            check_file "${1}+"
        fi
    else
        file_name="$file"
        make_file "$1"
    fi
}

check_file "$index"
vi "$file_name"
